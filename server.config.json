{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "compression": true,
    "cors": {
      "enabled": true,
      "origin": "*"
    },
    "cache": {
      "enabled": true,
      "maxAge": {
        "html": 0,
        "css": 3600,
        "js": 3600,
        "images": 86400,
        "fonts": 604800
      }
    },
    "logging": {
      "enabled": true,
      "format": "combined",
      "requests": true,
      "errors": true
    },
    "security": {
      "helmet": false,
      "rateLimiting": false,
      "csrf": false
    }
  },
  "development": {
    "autoReload": true,
    "verbose": true
  },
  "production": {
    "compression": true,
    "minify": false,
    "cache": true
  }
}
